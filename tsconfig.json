{
  "compilerOptions": {
    "paths": {
      "@react-native-styled-system/core": [
        "./packages/core/src/index"
      ]
    },
    "esModuleInterop": true,

    "lib": ["ESNext"],
    "jsx": "react",
    "types": [
      "node",
      "jest"
    ],
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "target": "ESNext",
    "declaration": true,
    "skipLibCheck": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false
  },
  "include": [
    "packages/**/src/**/*.ts",
    "packages/**/src/**/*.tsx",
    "example/**/*.ts",
    "example/**/*.tsx"
  ],
  "exclude": [
    "**/*.test.*",
    "node_modules",
    "packages/*/lib"
  ]
}