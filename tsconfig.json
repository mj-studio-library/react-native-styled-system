{
  "compilerOptions": {
    "lib": ["ES6", "ESNext"],
    "noResolve": false,
    "jsx": "react-jsx",
    "types": ["node"],
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ESNext",
    "noEmit": false,
    "declaration": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "**/*.test.tsx", "**/*.spec.ts", "**/*.test.ts", "**/*.spec.tsx"],
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
        // "tsConfigFile": "my-tsconfig.json"
      }
    }
  }
}
