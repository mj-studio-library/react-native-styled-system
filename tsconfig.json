{
  "compilerOptions": {
    "baseUrl": "./",
    "lib": ["ESNext"],
    "jsx": "react",
    "types": ["node", "jest"],
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "target": "ESNext",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "react-native-themed-styled-system": ["packages/core/src/index"]
    },
    "allowUnreachableCode": false,
    "allowUnusedLabels": false
  },
  "include": [
    "packages/**/src/**/*.ts",
    "packages/**/src/**/*.tsx",
    "example/**/*.ts",
    "example/**/*.tsx"
  ],
  "exclude": ["**/*.test.*", "node_modules"]
}
