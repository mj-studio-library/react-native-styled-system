{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "packages": ["packages/*"],
  "version": "0.0.19",
  "npmClient": "yarn",
  "ignoreChanges": ["**/doc/**", "**/example/**"],
  "command": {
    "version": {
      "message": "chore(release): release packages",
      "conventionalCommits": true,
      "private": false
    },
    "publish": {
      "private": false,
      "registry": "https://npm.pkg.github.com"
    }
  },
  "createRelease": "github",
  "allowBranch": ["main"]
}
